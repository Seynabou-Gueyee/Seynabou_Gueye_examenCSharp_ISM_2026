@model cSharp.Models.InscriptionViewModel

@{
    ViewData["Title"] = "Nouvelle Inscription";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index"><i class="bi bi-house-door"></i> Liste</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nouvelle Inscription</li>
                </ol>
            </nav>
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-person-plus-fill"></i> @ViewData["Title"]
            </h1>
            <p class="lead text-muted">Remplissez le formulaire ci-dessous pour enregistrer une nouvelle inscription</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-clipboard-data"></i> Formulaire d'inscription</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Nom" class="form-label fw-semibold">
                                    <i class="bi bi-person-fill"></i> Nom <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                    <input asp-for="Nom" class="form-control form-control-lg" placeholder="Entrez le nom" />
                                </div>
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Prenom" class="form-label fw-semibold">
                                    <i class="bi bi-person-fill"></i> Prénom <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
                                    <input asp-for="Prenom" class="form-control form-control-lg" placeholder="Entrez le prénom" />
                                </div>
                                <span asp-validation-for="Prenom" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Niveau" class="form-label fw-semibold">
                                <i class="bi bi-mortarboard"></i> Niveau <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-book-fill"></i></span>
                                <select asp-for="Niveau" class="form-select form-select-lg">
                                    <option value="">-- Sélectionnez un niveau --</option>
                                    <option value="L1">L1</option>
                                    <option value="L2">L2</option>
                                    <option value="L3">L3</option>
                                </select>
                            </div>
                            <span asp-validation-for="Niveau" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AnneeScolaire" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event"></i> Année Scolaire <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                                <input asp-for="AnneeScolaire" class="form-control form-control-lg" placeholder="Ex: 2024-2025" />
                            </div>
                            <span asp-validation-for="AnneeScolaire" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Date" class="form-label fw-semibold">
                                    <i class="bi bi-calendar"></i> Date d'inscription <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-check"></i></span>
                                    <input asp-for="Date" class="form-control form-control-lg" type="date" />
                                </div>
                                <span asp-validation-for="Date" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Montant" class="form-label fw-semibold">
                                    <i class="bi bi-cash"></i> Montant (FCFA) <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                    <input asp-for="Montant" class="form-control form-control-lg" type="number" step="0.01" placeholder="Ex: 50000" />
                                </div>
                                <span asp-validation-for="Montant" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Enregistrer l'inscription
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
