@model cSharp.Models.Inscription

@{
    ViewData["Title"] = "Supprimer l'inscription";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index"><i class="bi bi-house-door"></i> Liste des inscriptions</a></li>
            <li class="breadcrumb-item active" aria-current="page">Supprimer</li>
        </ol>
    </nav>

    <h1 class="display-5 fw-bold text-danger mb-4">
        <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]
    </h1>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-octagon-fill fs-3 me-3"></i>
                <div>
                    <h4 class="alert-heading mb-2">Attention !</h4>
                    <p class="mb-0">Êtes-vous sûr de vouloir supprimer cette inscription ? Cette action est irréversible.</p>
                </div>
            </div>

            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-x-fill"></i> Inscription de @Model.Etudiant.Prenom @Model.Etudiant.Nom
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="detail-item-delete">
                                <div class="detail-label">
                                    <i class="bi bi-person-fill text-danger"></i> Étudiant
                                </div>
                                <div class="detail-value">
                                    @Model.Etudiant.Prenom @Model.Etudiant.Nom
                                    <br><small>Matricule: @Model.Etudiant.Matricule</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="detail-item-delete">
                                <div class="detail-label">
                                    <i class="bi bi-mortarboard-fill text-danger"></i> Classe
                                </div>
                                <div class="detail-value">
                                    <span class="badge bg-danger">@Model.Classe.Libelle</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="detail-item-delete">
                                <div class="detail-label">
                                    <i class="bi bi-calendar-event text-danger"></i> Année Scolaire
                                </div>
                                <div class="detail-value">@Model.AnneeScolaire.Libelle</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item-delete">
                                <div class="detail-label">
                                    <i class="bi bi-calendar-fill text-danger"></i> Date
                                </div>
                                <div class="detail-value">@Model.Date.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="detail-item-delete">
                                <div class="detail-label">
                                    <i class="bi bi-cash text-danger"></i> Montant
                                </div>
                                <div class="detail-value fw-bold">@Model.Montant.ToString("N0") FCFA</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between p-3">
                    <form asp-action="Delete" method="post" class="w-100 d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash-fill"></i> Confirmer la suppression
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-item-delete {
        background: #fff5f5;
        padding: 1rem;
        border-radius: 10px;
        border-left: 4px solid #dc3545;
        height: 100%;
    }
    .detail-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }
    .detail-value {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }
</style>
